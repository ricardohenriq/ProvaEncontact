@model Recado

<div class="container-recado">
    <h3 class="titulo-recado">@Model.Assunto</h3>

    <div class="form-group row">
        <label asp-for="DataCriacao" class="col-sm-2 recado-label">@ConstantesPalavras.DT_RECADO</label>
        <div class="col-sm-10">
            <input asp-for="DataCriacao" type="text" class="form-control" value="@Model.DataCriacao.ToString(ConstantesUtilitarios.DATA_PT_BR)" disabled>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="De" class="col-sm-2 recado-label">@Html.DisplayNameFor(x => x.De)</label>
        <div class="col-sm-10">
            <input asp-for="De" type="text" class="form-control" disabled>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Para" class="col-sm-2 recado-label">@Html.DisplayNameFor(x => x.Para)</label>
        <div class="col-sm-10">
            <input asp-for="Para" type="text" class="form-control" disabled>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Mensagem" class="col-sm-2 recado-label">@ConstantesPalavras.RECADO</label>
        <div class="col-sm-10">
            <textarea asp-for="Mensagem" type="text" class="form-control" rows="6" disabled></textarea>
        </div>
    </div>
</div>